private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {

    miguel  = Double.parseDouble(jTextField1.getText());
    miguel1 = Double.parseDouble(jTextField2.getText());
    miguel2 = Double.parseDouble(jTextField3.getText());

    double promedio = (miguel + miguel1 + miguel2) / 3;
    double max = Math.max(miguel, Math.max(miguel1, miguel2));
    double min = Math.min(miguel, Math.min(miguel1, miguel2));

    JOptionPane.showMessageDialog(this,
        "Promedio: " + promedio +
        "\nM치ximo: " + max +
        "\nM칤nimo: " + min);
}
































// ===== BUSCAR PRODUCTO Y ACTUALIZAR PRECIO (boton6 - mouseClicked) =====
String producto = campo7.getText().toLowerCase();
double nuevoPrecio = Double.parseDouble(campo9.getText());

if (producto.equals("laptop")) {
    campo7.setText("Laptop - Precio actualizado: $" + nuevoPrecio);
}
else if (producto.equals("mouse")) {
    campo7.setText("Mouse - Precio actualizado: $" + nuevoPrecio);
}
else if (producto.equals("teclado")) {
    campo7.setText("Teclado - Precio actualizado: $" + nuevoPrecio);
}
else {
    campo7.setText("Producto no encontrado");
}

